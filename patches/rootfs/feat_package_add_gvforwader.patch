+
+GVFORWARDER_VERSION = 0.6.2
+GVFORWARDER_SITE = $(call github,containers,gvisor-tap-vsock,v$(GVFORWARDER_VERSION))
+
+GVFORWARDER_LICENSE = Apache-2.0
